
sum = 0
while True:
    num = int(input("Enter integer (0 for output): "))
    if num == 0:
        break
    temp = 0
    temp2 = 0
    for i in range (num):
        temp = temp + 1
        if temp % 2 == 1:
            continue
        print(temp)
        temp2 = temp2 + temp
    sum = sum + temp2
print(sum)